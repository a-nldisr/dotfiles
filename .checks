#!/bin/bash

# This checks the PLATFORM and then registers the PLATFORM in a variable

register_os(){
local unamestr
# Retrieve PLATFORM
unamestr=$(uname)
# Retrieve processor type
unameproc=$(uname -p)

if [[ -z "$unamestr" ]]; then
    PLATFORM='unset'
    echo "${PLATFORM} PLATFORM"
elif [[ "$unamestr" == 'Linux' ]]; then
   PLATFORM='linux'
elif [[ "$unamestr" == 'FreeBSD' ]]; then
   PLATFORM='freebsd'
elif [[ "$unamestr" == 'Darwin' ]]; then
   if [[ "$unameproc" == 'i386' ]]; then
      PLATFORM='darwin'
      PROCESSOR='i386'
      export PROCESSOR
   elif [[ "$unameproc" == 'arm' ]]; then
      PLATFORM='darwin'
      PROCESSOR='arm'
      export PROCESSOR
   fi
fi
}

register_os