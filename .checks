#!/bin/bash
set -e

# This checks the platform and then registers the platform in a variable

register_os(){
unamestr=$(uname)
local -r unamestr

if [[ "$unamestr" == 'Linux' ]]; then
   platform='linux'
elif [[ "$unamestr" == 'FreeBSD' ]]; then
   platform='freebsd'
elif [[ "$unamestr" == 'Darwin' ]]; then
   platform='darwin'
fi

echo "We are using ${platform}"
}

register_os

