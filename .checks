#!/bin/bash
set -e

# This checks the platform and then registers the platform in a variable

register_os(){
local unamestr
unamestr=$(uname)

if [[ -z "$unamestr" ]]; then
    platform='unset'
    echo "${platform} platform"
elif [[ "$unamestr" == 'Linux' ]]; then
   platform='linux'
elif [[ "$unamestr" == 'FreeBSD' ]]; then
   platform='freebsd'
elif [[ "$unamestr" == 'Darwin' ]]; then
   platform='darwin'
fi


}

register_os

